{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["DOM", "ESNext"],
    "baseUrl": "./",
    "types": ["vite/client"],
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true
  },
  "include": ["./**/*.ts", "./**/*.js", "./**/*.d.ts", "./**/*.css"],
  "exclude": ["dist", "node_modules"]
}
